{
  "name": "Better Pull Request for GitHub",
  "short_name": "Better PRs",
  "permissions": [
    "contextMenus",
    "*://*.github.com/*"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "better_github_prs.js"
      ],
      "css": []
    }
  ],
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
